<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fine_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.hermann.bussenliste.FineDetailFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fineDescription"
        android:paddingTop="@dimen/text_margin"
        android:paddingLeft="@dimen/text_margin"
        android:paddingStart="@dimen/text_margin"
        android:paddingRight="@dimen/text_margin"
        android:paddingEnd="@dimen/text_margin"/>

    <EditText
        android:id="@+id/fine_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/fineDescription"
        android:padding="@dimen/text_margin"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fineAmountText"
        android:paddingTop="@dimen/text_margin"
        android:paddingLeft="@dimen/text_margin"
        android:paddingStart="@dimen/text_margin"
        android:paddingRight="@dimen/text_margin"
        android:paddingEnd="@dimen/text_margin"/>

    <EditText
        android:id="@+id/fine_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/fineAmountText"
        android:padding="@dimen/text_margin"
        android:inputType="number"/>

</LinearLayout>

